<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#272727">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text=""
        android:textStyle="bold"
        android:id="@+id/textView" />
    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/save"
        android:background="#00000000"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/img_huaishi"
        android:layout_width="220dp"
        android:layout_height="280dp"

        android:scaleType="fitCenter"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ori_process"
                android:layout_width="75dip"
                android:layout_height="80dip"
                android:text="Original"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:scaleType="centerInside"
                android:background="@drawable/ori"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn_gray_process"
                android:layout_width="75dip"
                android:layout_height="80dip"
                android:text="Gray"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:scaleType="centerInside"
                android:background="@drawable/gray"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn_blur_process"
                android:layout_width="75dip"
                android:layout_height="80dip"
                android:text="Blur"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:scaleType="centerInside"
                android:background="@drawable/blur"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn_laplacian_process"
                android:layout_width="75dip"
                android:layout_height="80dip"
                android:text="Laplace"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:scaleType="centerInside"
                android:background="@drawable/laplacian"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn_canny_process"
                android:layout_width="75dip"
                android:layout_height="80dip"
                android:text="Canny"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:scaleType="centerInside"
                android:background="@drawable/canny"
                android:layout_marginRight="5dp"/>


        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
